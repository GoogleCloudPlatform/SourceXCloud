#!/usr/bin/python

import os
import sys

def is_django(manage_py):
    for line in open(manage_py):
        if line.find('django.core.management'):
            return True
    else:
        return False

dir = sys.argv[1]
manage_py = os.path.join(dir, 'manage.py')
if os.path.exists(manage_py) and is_django(manage_py):
    sys.exit(0)
else:
    sys.exit(1)


